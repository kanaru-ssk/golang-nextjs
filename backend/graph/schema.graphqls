type User {
  id: ID!
  name: String!
}

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  userId: ID!
  user: User!
}

type Query {
  users: [User!]!
  todos: [Todo!]!
}

input NewUser {
  name: String!
}

input NewTodo {
  text: String!
  userId: ID!
}

type Mutation {
  createUser(input: NewUser!): User!
  createTodo(input: NewTodo!): Todo!
}
