type User {
  id: Int!
  name: String!
}

type Todo {
  id: Int!
  text: String!
  done: Boolean!
  userId: Int!
  user: User!
}

type Query {
  user(input: Int!): User!
  users: [User!]!
  todos(input: Int!): [Todo!]!
}

input NewUser {
  name: String!
}

input NewTodo {
  text: String!
  userId: Int!
}

type Mutation {
  createUser(input: NewUser!): User!
  createTodo(input: NewTodo!): Todo!
}
